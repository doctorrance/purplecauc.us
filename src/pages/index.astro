---
import Layout from "../components/Layout.astro";
const title = "Purple Caucus — Ballotomics: Currency of the People";
const desc = "Nonpartisan, future‑forward civic literacy for Gen XYZ.";
---
<Layout title={title} description={desc}>
  <section class="hero card">
    <p class="muted">MVP</p>
    <h1>Purple Caucus — Ballotomics: Currency of the People</h1>
    <p>Nonpartisan, future‑forward civic literacy for Gen XYZ.</p>
    <div style="display:flex;gap:.75rem;flex-wrap:wrap">
      <a class="btn" href="/subscribe">Subscribe</a>
      <a class="btn secondary" href="/about">About</a>
    </div>
  </section>

  <section style="margin-top:2rem" class="card">
    <h3>Roadmap</h3>
    <ul>
      <li>Wire Substack on /subscribe</li>
      <li>Brand visuals & OG images</li>
      <li>Connect custom domain on Vercel</li>
    </ul>
  </section>
</Layout>
