---
import Layout from "../components/Layout.astro";
const substack = "https://your-purplecaucus-substack.substack.com";
---
<Layout title="Subscribe — Purple Caucus — Ballotomics: Currency of the People" description="Subscribe for updates">
  <article class="card">
    <h1>Subscribe</h1>
    <p>Paste your Substack embed code below (Settings → Growth features). Placeholder embed shown.</p>
    <div class="card" style="background:rgba(255,255,255,.04)">
      <iframe src="{substack}/embed" width="100%" height="340" style="border:1px solid rgba(255,255,255,.16);border-radius:12px"></iframe>
    </div>
  </article>
</Layout>
